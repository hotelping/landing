<div class="flex flex-col justify-center h-full py-12">
  <div class="self-center items-center justify-center flex flex-col sm:flex-row w-full md:w-5/6 xl:w-2/3 px-4 sm:px-0">
    <div class="w-full text-center sm:text-left sm:w-1/2 py-12 sm:px-8">
      <div class="font-light font-mono text-browngray text-4xl my-6">
        <p class="w-full tracking-tighter typeIt"></p>
      </div>
      <h2 class="font-bold tracking-widest text-3xl">Enter your email to be notified when we launch our prototype</h2>
      <div class="my-6">
        <form name="email-capture" method="POST" data-netlify="true">
          <p class="my-2">
            <label for="email"><input type="email" name="email" class="form-input px-4 py-3 rounded-full border-2 border-yellow-500" placeholder="Enter your email"/></label>
          </p>
          <p class="my-2 pl-3">
            <input type="checkbox" id="scout-yes" name="scout-yes" value="yes" class="rounded-full">
            <label for="scout-yes" class="italic"> I'd like to help scout hotel internet speeds</label><br>
          </p>
          <p class="my-2">
            <button type="submit" class="text-white px-4 py-3 rounded-full bg-indigo-500 hover:bg-indigo-700">Submit</button>
          </p>
        </form>
      </div>
    </div>
    <div class="w-full sm:w-1/3">
      <img src="/img/dnd.svg" alt="Hotel room do not disturb image">
    </div>
  </div>
</div>
<script>
  new TypeIt(".typeIt", {
    strings: "Hotel internet quality index.",
    speed: 75,
    waitUntilVisible: true
  }).go();
</script>
